import java.util.*;
public class BoneApetit {
   public static void main(String args[]){ 
    Scanner sc = new Scanner(System.in);
    int N = sc.nextInt();
    int M = sc.nextInt();
    int X = sc.nextInt();
    int Y = sc.nextInt();
	int A = N * X;
	int B = M * Y;
	System.out.println(A+B);
   }
}   
